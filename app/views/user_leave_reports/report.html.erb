<h2> Leave Summary </h2>
<%= render 'options' %><br/><br/>
<% if @divided_leaves.nil? ||  @divided_leaves.empty? %>
  <% flash.now[:error] = 'No Results Found!' %>
<% else %>
  <%@divided_leaves.each do |key,value|%>
    <%=key.to_s%>
    <table border="1">
      <thead>
        <tr align="left">
          <th>User ID</th>
          <th>Name</th>
          <th>Leave Type</th>
          <th>Leave Date</th>
          <th>Comments</th>
          <% if User.current.admin? %>
            <th></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% value.each do |user_leave|%>
          <tr align="left" class="<%= cycle("odd", "even")%>">
            <td><%= user_leave.user_id %></td>

            <td><%= User.find(user_leave.user_id).name %></td>
            <td><%= user_leave.leave_type %></td>
            <td><%= user_leave.leave_date %></td>
            <td><%= user_leave.comments %></td>
            <% if User.current.admin? %>
              <td>
                <%= link_to 'Edit', edit_user_leafe_path(user_leave) %> | 
                <%= link_to 'Delete', user_leafe_path(user_leave),
                  method: :delete, data: { confirm: 'Are you sure?' }%>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<%end%>