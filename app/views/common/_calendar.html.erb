<table class="cal">
  <thead>
    <tr><th scope="col" title="<%= l(:label_week) %>" class="week-number"></th><% 7.times do |i| %><th scope="col"><%= day_name( (calendar.first_wday+i)%7 ) %></th><% end %></tr>
  </thead>
  <tbody>
    <tr>
      <% day = calendar.startdt
      while day <= calendar.enddt %>
        <%= ("<td class='week-number' title='#{ l(:label_week) }'>#{(day+(11-day.cwday)%7).cweek}</td>".html_safe) if day.cwday == calendar.first_wday %>
        <td class="<%= day.month==calendar.month ? 'even' : 'odd' %><%= ' today' if Date.today == day %>">
          <p class="day-num"><%= day.day %></p>
          <% calendar.events_with_leaves_on(day).each do |i| %>
            <% if i.is_a? Issue %>
              <div class="<%= i.css_classes %> <%= 'starting' if day == i.start_date %> <%= 'ending' if day == i.due_date %> tooltip">
                <%= h("#{i.project} -") unless @project && @project == i.project %>
                <%= link_to_issue i, :truncate => 30 %>
                <span class="tip"><%= render_issue_tooltip i %></span>
              </div>
            <% elsif i.is_a? Version %>
              <span class="icon icon-package">
                <%= h("#{i.project} -") unless @project && @project == i.project %>
                <%= link_to_version i%>
              </span>
            <% elsif i.is_a? UserLeave %>
              <div class="tooltip">
                <span class="icon icon-package">
                  <%= link_to "#{User.find(i.user_id).name}", user_url(User.find(i.user_id).id) %>
                  <%= "- #{i.fractional_leave}" %><br>
                  <span class="tip">
                    <strong>Name: </strong><%=link_to "#{User.find(i.user_id).name}", user_url(User.find(i.user_id).id) %><br>
                    <strong>Weight: </strong><%= i.fractional_leave %><br>
                    <strong>Leave Type: </strong><%= i.leave_type %><br>
                    <strong>Leave Date: </strong><%= i.leave_date %><br>                    
                    <strong>Comments: </strong><%= i.comments %><br>
                  </span>
                </span>
              <% end %>
            </div>
          <% end %>
        </td>
        <%= '</tr><tr>'.html_safe if day.cwday==calendar.last_wday and day!=calendar.enddt %>
        <% day = day + 1
        end %>
    </tr>
  </tbody>
</table>